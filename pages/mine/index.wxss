/* pages/mine/index.wxss */

.box {
  position: relative;
  background: url("https://zykj-resource.oss-cn-hangzhou.aliyuncs.com/wechat/user_bg.png") no-repeat bottom;
  background-size: contain;
  height: 100%;
  padding: 0 40rpx;
  box-sizing: border-box;
}

.myMessage {
  display: flex;
  width: 100%;
  height: 200rpx;
  align-items: center;
  /* background-color: #AAD8FF; */
  /* background-color: var(--themeColor); */
}

.myMessage image {
  display: block;
  margin: 0 auto;
  width: 144rpx;
  height: 144rpx;
  border-radius: 50%;
}

.userNameBox {
  display: flex;
  align-items: center;
}

.fontWeight {
  font-weight: 700;
}

.docName {
  font-weight: 700;
  font-size: 36rpx;
}

.title {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 56rpx 36rpx;
  box-sizing: border-box;
  border-radius: 30rpx;
  background-color: #fff;
  box-shadow: 0 2px 12px 0 rgba(0, 0, 0, .1);
}

.userinfo {
  display: flex;
  align-items: center;
}

.title:last-child {
  margin-top: 20rpx;
}

.title image {
  width: 60rpx;
  height: 60rpx;

}

.content {
  font-size: 32rpx;
  font-weight: 700;
  margin-left: 30rpx;
}

.text {
  margin-bottom: 30rpx;
  margin-top: 30rpx;
  text-align: center;
  color: #808080;
  font-size: 28rpx;
}

.qrcode {
  width: 520rpx;
  height: 520rpx;
  display: block;
  margin: 0 auto;
  margin-bottom: 30rpx;
  margin-top: 60rpx;
}