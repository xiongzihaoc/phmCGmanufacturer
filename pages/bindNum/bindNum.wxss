#InputPhone{
  line-height: 221rpx;
  background: #fff;
  padding-left: 15px;
  box-sizing: border-box;
  padding:0 40rpx;
}

#topLine{
   line-height: 1rpx;
  background: #c9c9c9;
  margin-top: 20rpx;
}

#line{
  height: 1rpx;
  background: #e4e4e4;
  padding-left: 15px;
 
}

.promptText{
 font-size: 24rpx;
 color: #9c9c9c;
 padding-left:30rpx;
 margin-top: 15rpx;
}

.searchInput{
   height: 110rpx;
   line-height: 110rpx;
   font-size:28rpx;
   color:#000;
   letter-spacing: 1px;
   width: 100%;

}

.varificationInput{
   height: 110rpx;
   line-height: 110rpx;
   font-size:28rpx;
   color:#000;
   letter-spacing: 1px;
   width: 60%;
}

.commitButton{
  width: 96%;
  height: 88rpx;
  display: inline-block;
  text-align: center;
  background: #ecc568;
  font-size: 30rpx;
  color: #fff;
  border-radius: 8rpx;
  margin: 0 auto;
  margin-top: 58rpx;
  line-height: 88rpx;
  margin-left: 15rpx;
}

#background{
 width: 100%;
 height: 100%;
  background: #f3f3f3;
}

#varifcationbox{
 display: flex;
 height: 110rpx;
 align-items: center;
 justify-content: space-between;
}

.varificationButton{
 border: 1rpx solid #f6ae23 ;
 text-align: center;
 border-radius:70rpx;
 width: 210rpx;
